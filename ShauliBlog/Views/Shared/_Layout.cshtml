<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Ha-Blog Shel Shauli</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header style="display: flow-root">
        <h1 style="display: inline-block" class="TitleShauli">Ha-Blog Shel Shauli</h1>

        <img style="display:inline-block; float:right;" src="~/images/new-shauli.png" />
    </header>

    <nav>
        <!-- Navigation -->
        <ul>
            @if (User != null && User.Identity != null && User.Identity.IsAuthenticated) {
                <li>
                    <a href="~/Login/LogOff">Hello @ShauliBlog.Code.AccountHelper.Username(), Logout</a>
                </li>
            }
            else {
                <li>
                    <a href="~/Login/Login">Login</a>
                </li>
            }

            @foreach (var itemMenu in new[] { "Blog", "FansClub", "Posts" }) {
                <li class="@(ViewBag.Selected == @itemMenu ? "selected": String.Empty)">
                    <a href="/@itemMenu">@itemMenu</a>
                </li>
            }

            <li class="subscribe">
                <div id="transDemo2">
                    <div class="hover">
                        <img src=http://www.ashlylorenzana.com/wp-content/uploads/2013/12/12065637851779660844SRD_RSS_Logo.svg_.hi_.png width="30" height="30">
                    </div>
                </div>
            </li>
            <li>
                <a href="#">Subscribe via. RSS</a>
            </li>
        </ul>
    </nav>

    <br /><br /><br />
    <div id="content">
        <div id="mainContent">
            @RenderSection("ContentSection", true)
        </div>
    <aside>
        <section>
            <header>
                <h3>Categories</h3>
            </header>
            <ul>
                <li><a href="/Blog/PostsByTag?tags=1-"> Sport </a></li>
                <li><a href="/Blog/PostsByTag?tags=2-"> Romantic </a></li>
                <li><a href="/Blog/PostsByTag?tags=3-"> Entertainment </a></li>
            </ul>
        </section>

        <section>
            <audio id="audio" controls="controls" autoplay="autoplay">
                <source src="http://www.orangefreesounds.com/wp-content/uploads/2017/06/Electron-breeze-downtempo-lounge-chill-out.mp3" type="audio/mpeg">
            </audio>
        </section>      
    </aside>
</div>

    <footer>
        <!-- Footer -->
        <div>
            <section id="about">
                <header>
                    <h3>About</h3>
                </header>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut la</p>
            </section>
            <section id="blogroll">
                <header>
                    <h3>Blogroll</h3>
                </header>
                <ul>
                    <li><a href="#">NETTUTS+</a></li>
                    <li><a href="#">FreelanceSwitch</a></li>
                </ul>
            </section>
            <section id="popular">
                <header>
                    <h3>Popular</h3>
                </header>
                <ul>
                    <li><a href="#">This is the title of a blog post</a></li>
                    <li><a href="#">Lorem ipsum dolor sit amet</a></li>
                    <li><a href="#">Consectetur adipisicing elit, sed do eiusmod</a></li>
                </ul>

            </section>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
