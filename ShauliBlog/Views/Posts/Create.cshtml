@model ShauliBlog.Models.Post
    ViewBag.Title = "Create";
}

@section ContentSection {

    <h2>Create</h2>

<div>
    <div style="display:block;">

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

