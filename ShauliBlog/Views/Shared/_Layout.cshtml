<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Ha-Blog Shel Shauli</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <h1 class="TitleShauli">Ha-Blog Shel Shauli</h1>
    </header>
    <nav>
        <!-- Navigation -->
        <ul>
            @if (User != null && User.Identity != null && User.Identity.IsAuthenticated) {
                <li>
                    <a href="~/Login/LogOff">Hello @ShauliBlog.Code.AccountHelper.Username(), Logout</a>
                </li>
            }
            else {
                <li>
                    <a href="~/Login/Login">Login</a>
                </li>
            }

            @foreach (var itemMenu in new[] { "Blog", "FansClub", "Posts", "Contact" }) {
                <li class="@(ViewBag.Selected == @itemMenu ? "selected": String.Empty)">
                    <a href="/@itemMenu">@itemMenu</a>
                </li>
            }



            <li class="subscribe">
                <div id="transDemo2">
                    <div class="hover">
                        <img src=http://www.ashlylorenzana.com/wp-content/uploads/2013/12/12065637851779660844SRD_RSS_Logo.svg_.hi_.png width="30" height="30">
                    </div>
                </div>
            </li>
            <li>
                <a href="#">Subscribe via. RSS</a>
            </li>
        </ul>
    </nav>

    <section id="intro">
        <!-- Introduction -->

        <header>
            <h2>Do you have questions for me?</h2>
        </header>
        <p>bla bla bla bla</p>
        <img src="~/images/intro_shauli.png" alt="Shauli" />

    </section>

    <form id="search-form" onsubmit="return search()">
        <input type="text" id="query" />
        <input type="submit" value="" />
    </form>

    <div id="results"></div>

    <div id="content">
        @RenderSection("ContentSection", true)
        <aside>
            <section>
                <header>
                    <h3>Categories</h3>
                </header>
                <ul>
                    <li><a href="#">Lorem ipsum dolor</a></li>
                    <li><a href="#">Sit amet consectetur</a></li>
                    <li><a href="#">Adipisicing elit sed</a></li>
                </ul>
            </section>
            <section>
                <header>
                    <h3>Archives</h3>
                </header>
                <ul>
                    <li><a href="#">December 2008</a></li>
                    <li><a href="#">January 2009</a></li>
                    <li><a href="#">February 2009</a></li>
                    <li><a href="#">March 2009</a></li>
                </ul>
            </section>
            <section>
                <audio id="audio" controls="controls">
                    <source src="http://www.orangefreesounds.com/wp-content/uploads/2017/06/Electron-breeze-downtempo-lounge-chill-out.mp3" type="audio/mpeg">
                </audio>
            </section>
        </aside>
    </div>

    <footer>
        <!-- Footer -->
        <div>
            <section id="about">
                <header>
                    <h3>About</h3>
                </header>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut la</p>
            </section>
            <section id="blogroll">
                <header>
                    <h3>Blogroll</h3>
                </header>
                <ul>
                    <li><a href="#">NETTUTS+</a></li>
                    <li><a href="#">FreelanceSwitch</a></li>
                </ul>
            </section>
            <section id="popular">
                <header>
                    <h3>Popular</h3>
                </header>
                <ul>
                    <li><a href="#">This is the title of a blog post</a></li>
                    <li><a href="#">Lorem ipsum dolor sit amet</a></li>
                    <li><a href="#">Consectetur adipisicing elit, sed do eiusmod</a></li>
                </ul>

            </section>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    
    
    <script>
        function search() {
            q = $("#query").val();
        
            $.get(
                "https://www.googleapis.com/youtube/v3/search", {
                    part: 'snippet, id',
                    q: q,
                    type: 'video',
                    key: 'AIzaSyA5ScoMprnv9ikhsD6eLujlyTRhfScf9pw'
                },
                function (data) {

                    $.each(data.items, function (i, item) {
                        var output = getOutput(item);
                        
                        localStorage.setItem("youtubeData", JSON.stringify(output));
                        
                        console.log(localStorage.getItem("youtubeData"));
                    });
                }
            ).then(function () {
                buildTable();
            });
        }

        function buildTable() {
            var output = "<table>" + "</table>";    

            return output;
        }

        function getOutput(item) {
            var output = {
                videoId: item.id.videoId,
                title: item.snippet.title,
                thumb: item.snippet.thumbnails.high.url
            };
            return output;
        }

        $("#search-form").submit(function (e) {
            e.preventDefault();
        });
    </script>  
   

</body>
</html>
